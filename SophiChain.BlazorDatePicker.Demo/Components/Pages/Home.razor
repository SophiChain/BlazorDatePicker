@code {
    private DateTime? selectedDate = DateTime.Today;
    private DateRange? dateRange;

    private string GetRangeText()
    {
        if (dateRange?.Start != null && dateRange?.End != null)
        {
            return $"{dateRange.Start.Value:d} - {dateRange.End.Value:d}";
        }
        return "None";
    }
}
